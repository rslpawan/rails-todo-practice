<div class="container home-page">
    <div class="">
        <div class="card p-4 input-card">
            <%= link_to 'Form', new_home_path %>
        </div>
    </div>
    <div class="row mt-2">
        <% Todo.all.each do |todo| %>
            <div class="col-lg-3 mt-2">
                <div class="card p-2">
                    <h4>Title: <%= todo.title %></h4>
                    <h6>Description: <%= todo.description %></h6>
                    <h6>Due Date: <%= todo.due %></h6>
                    <div class="d-flex justify-content-between align-center">
                        <a href="#" class="btn btn-success w-100 mx-2">Edit</a>
                        <a href="home/<%= todo.id %>" data-method="delete" class="btn btn-danger w-100 mx-2">Delete</a>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
