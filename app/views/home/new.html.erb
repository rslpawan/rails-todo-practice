<%= form_for @todo do |f| %>
    <%= f.text_field :title, placeholder: 'Title' , class: 'form-control my-2' %>
    <%= f.text_field :description, placeholder: 'Description' , class: 'form-control my-2' %>
    <%= f.date_field :due, class: 'form-control my-2' %>
    <%= f.submit "Add Todo" , class: 'btn btn-primary' %>
<% end %>